<!DOCTYPE html>
<html>
<head>
  <title>RailsBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Raleway&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lobster&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body>
	<header>
		<nav>
      <ul>
  			<% if current_user %>
  				<li>
            <span><%= "Hello #{current_user.fname}" %> |</span>
    				<span><%= link_to "Sign out", logout_path, method: :delete %> |</span>
    				<span><%= link_to "Write a new post", new_post_path %> |</span>
            <span><%= link_to "Home", users_path %></span>
          </li>
  			<%else%>
  				<li>
            <span><%= link_to "Sign up", new_user_path %> |</span>
    				<span><%= link_to "Sign in", new_session_path %> |</span>
            <span><%= link_to "Home", users_path %></span>
          </li>
  			<%end%>
      </ul>
		</nav>
	</header>
<%= flash[:notice] if flash[:notice] %>
<%= flash[:alert] if flash[:alert] %>	
<%= yield %>



</body>
</html>



