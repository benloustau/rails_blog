<li class="comments">
  <div>
    <%= link_to comment.user.fullname, user_path(comment.user.id) %>
    <%= comment.body %>
    <span class="time-text">
      <%= comment.created_at.strftime("posted at %I:%M%p on %m/%d/%Y") %>
      <%= link_to 'delete', post_comment_path(post, comment), method: :delete,data: {confirm: "Are you sure you want to delete this comment?"}, class: "delete-btn" %>
    </span>
  </div>
</li>

