<!-- If user is not signed in - landing page for sign in, sign up and about -->
<!-- Else, user's homepage -->
<div class="wrapper">

<!-- user homepage -->
  <% if current_user %>

    <div class="left-column">
      <div class="profile-container">
        <h3><%= "Hello #{current_user.fname}" %></h3>
      </div>

      <h3>All users</h3>
      <ol>
        <% @users.each do |user| %>
          <li>
            <%= link_to user.fname, user %> |
            <%= user.location %>
          </li>
        <% end %>
      </ol>
    </div>


    <div class="right-column">
      <h3>Friend's Posts</h3>
      <div class="post-feed">
        <ul>
          <% @posts.each do |post| %>
          <%= render partial: 'post', locals: { post: post } %>
            <%end%>
        </ul>
      </div>
    </div>


  <%else%>
  <!-- if not logged in. -->
    <div class="title">
      <h3>Been There?</h3>
      <p>A place to blog about about your favorite places to eat in the city!</p>
    </div>
  <%end%>
</div>

<div class="sign-up">
  <p class="create-link">Create a new account today!<p>
  <%= render 'form' %>
  
</div>


