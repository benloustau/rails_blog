<!-- landing page for sign in, sign up andabout/landing page -->

<% if current_user %>
<!-- user homepage -->
  <h2><%= "Hello #{current_user.fname}" %></h2>
  
  <div class="left_column">
    <h3>All users</h3>
    <ol>
    <% @users.each do |user| %>
      <li>
        <%= link_to user.fname, user %> | 
        <%= user.location %> |
      </li>
    <% end %>
    </ol>
  </div>


  <div class="right_column">
    <h3>Friend's Post Feed</h3>

    render partial 


  </div>
  </div>



<%else%>
  <h1>Welcome to rails_blog</h1>
  <p>A place to share your favorite recipes and connect with other homecooks!</p>
  <li><%= link_to "Sign up", new_user_path %> |
  <%= link_to "Sign in", new_session_path %></li>
<%end%>



